@model EcommerceWebsite.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Panel";
}

<head>
    <title>Admin Panel</title>
</head>
<div>
    @* <div class="d-flex justify-content-center"> *@
        <h1 class="text-center">Admin Panel</h1>
    @* </div> *@

    @* Products *@
    <div class="container">
        <a asp-controller="Admin" asp-action="AddProduct">Add New Product</a>
        <table class="table">
            <thead>
            <tr>
                <th>Image</th>
                <th>Name & Description</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @if (product.ImageData != null && product.ImageData.Length > 0)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(product.ImageData)" alt="@product.Name" style="max-width: 100px; max-height: 100px;" />
                        }
                    </td>
                    <td>
                        <h5>@product.Name</h5>
                        <p>@product.Description</p>
                    </td>
                    <td>$@product.Price</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>