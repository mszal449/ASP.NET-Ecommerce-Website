@model EcommerceWebsite.Models.CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price)
        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description)
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.LabelFor(m => m.StockQuantity)
        @Html.TextBoxFor(m => m.StockQuantity)
        @Html.ValidationMessageFor(m => m.StockQuantity, "", new { @class = "text-danger" })
    </div>
    <div>
        @Html.LabelFor(m => m.ImageFile)
        @Html.TextBoxFor(m => m.ImageFile, new { type = "file", accept = "image/*" })
        @Html.ValidationMessageFor(m => m.ImageFile, "", new { @class = "text-danger" })
    </div>
    <button type="submit">Create</button>
</form>

<style>
    form {
        max-width: 600px;
        margin: 0 auto;
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    form div {
        margin-bottom: 1rem;
    }

    form label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    form input[type="text"],
    form input[type="number"],
    form input[type="file"],
    form textarea {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    form button {
        display: block;
        width: 100%;
        padding: 0.75rem;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
    }

    form button:hover {
        background-color: #0056b3;
    }
</style>